<h2><%= notice %></h2>
<h1>物件一覧</h1>

  <table>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
    <% @propertys.each do |property| %>
      <tr class="danger">
        <td><%= property.name %></td>
        <td><%= property.rent %></td>
        <td><%= property.address %></td>
        <td><%= property.age %></td>
        <td><%= property.remarks %></td>

        <td><%= link_to '詳細', property_path(property.id)%></td>
        <td><%= link_to '編集', edit_property_path(property.id)%></td>
        <td><%= link_to '削除', property_path(property.id), method: :delete ,data: {confirm: "削除確認"} %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to  '物件を登録する', new_property_path %>